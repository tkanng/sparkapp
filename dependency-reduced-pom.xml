        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.tkanng.SparkPi</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
